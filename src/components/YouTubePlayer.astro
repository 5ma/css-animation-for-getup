---
interface Props {
  class?: string
}

const { class: className } = Astro.props;
---

<div class:list={[className, "wrapper"]}>
  <div id="player"></div>
</div>

<style lang="scss">
  .wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
  }
  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>